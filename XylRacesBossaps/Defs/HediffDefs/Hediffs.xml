<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>Berserk</defName>
    <label>berserk</label>
    <description>A temporary frenzy state. The character moves faster and feels almost no pain, but can't be controlled until the frenzy ends.</description>
    <hediffClass>XylRacesCore.Hediff_ForceBehavior</hediffClass>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <isBad>true</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <!--1 hour-->
        <disappearsAfterTicks>2500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.5</offset>
          </li>
        </capMods>
        <painFactor>0.1</painFactor>
      </li>
    </stages>
    <modExtensions>
      <li Class="XylRacesCore.ModExtension_Hediff_ForceBehavior">
        <thinkTree>AttackBerserk</thinkTree>
      </li>
    </modExtensions>
  </HediffDef>

</Defs>