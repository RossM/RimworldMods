<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_Hediff</geneClass>
    <defName>Blind</defName>
    <label>blind</label>
    <description>Carriers of this gene are blind.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>5</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>400</displayOrderInCategory>
    <modExtensions>
      <li Class="XylRacesCore.GeneDefExtension_Hediff">
        <hediffGivers>
          <li Class="HediffGiver_Event">
            <hediff>GeneticBlindness</hediff>
            <partsToAffect>
              <li>Eye</li>
            </partsToAffect>
            <countToAffect>2</countToAffect>
          </li>
        </hediffGivers>
        <applyImmediately>true</applyImmediately>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_Hediff</geneClass>
    <defName>Echolocation</defName>
    <label>echolocation</label>
    <description>Carriers of this gene use echolocation.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>400</displayOrderInCategory>
    <modExtensions>
      <li Class="XylRacesCore.GeneDefExtension_Hediff">
        <hediffGivers>
          <li Class="HediffGiver_Event">
            <hediff>Echolocation</hediff>
            <partsToAffect>
              <li>Head</li>
            </partsToAffect>
          </li>
        </hediffGivers>
        <applyImmediately>true</applyImmediately>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef>
    <defName>PsyFocus</defName>
    <label>focus</label>
    <description>Carriers automatically learn the Focus psycast, which boosts the target's sight, hearing and moving capacities.</description>
    <iconPath>UI/Abilities/Focus</iconPath>
    <geneClass>XylRacesCore.Gene_Psycast</geneClass>
    <displayCategory>Ability</displayCategory>
    <abilities>
      <li>Focus</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>Focus</AbilityDef>
    </descriptionHyperlinks>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
  </GeneDef>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_Flight</geneClass>
    <defName>BatWings</defName>
    <label>bat wings</label>
    <description>Carriers of this gene have bat-like wings instead of arms.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
    <displayCategory>Movement</displayCategory>
    <displayOrderInCategory>400</displayOrderInCategory>
    <capMods>
      <li>
        <capacity>Manipulation</capacity>
        <offset>-0.2</offset>
      </li>
    </capMods>
    <statOffsets>
      <MaxFlightTime>30</MaxFlightTime>
      <FlightCooldown>10</FlightCooldown>
    </statOffsets>
    <modExtensions>
      <li Class="XylRacesCore.GeneDefExtension_Flight">
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef>
    <defName>Nocturnal</defName>
    <label>nocturnal</label>
    <description>Carriers of this gene are naturally active at night.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>500</displayOrderInCategory>
    <forcedTraits>
      <li>
        <def>NightOwl</def>
      </li>
    </forcedTraits>
  </GeneDef>

  <GeneDef>
    <defName>KeenEars</defName>
    <label>keen ears</label>
    <description>Carriers of this gene have improved hearing.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>500</displayOrderInCategory>
    <capMods>
      <li>
        <capacity>Hearing</capacity>
        <offset>0.2</offset>
      </li>
    </capMods>
  </GeneDef>

</Defs>