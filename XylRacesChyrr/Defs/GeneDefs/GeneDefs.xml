<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_Hediff</geneClass>
    <defName>Blind</defName>
    <label>blind</label>
    <description>Carriers of this gene have non-functional eyes, making them totally blind.\n\nBlindness grants a +50% bonus to psychic sensitivity.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>5</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>400</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Blind</iconPath>
    <modExtensions>
      <li Class="XylRacesCore.GeneDefExtension_Hediff">
        <hediffGivers>
          <li Class="HediffGiver_Event">
            <hediff>GeneticBlindness</hediff>
            <partsToAffect>
              <li>Eye</li>
            </partsToAffect>
            <countToAffect>2</countToAffect>
          </li>
        </hediffGivers>
        <applyImmediately>true</applyImmediately>
      </li>
    </modExtensions>
    <customEffectDescriptions>
      <li>Sight: 0%</li>
    </customEffectDescriptions>
  </GeneDef>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_Hediff</geneClass>
    <defName>Echolocation</defName>
    <label>echolocation</label>
    <description>Carriers of this gene can use high-frequency sound waves to gain many of the benefits of sight even if totally blind.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>400</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Echolocation</iconPath>
    <modExtensions>
      <li Class="XylRacesCore.GeneDefExtension_Hediff">
        <hediffGivers>
          <li Class="HediffGiver_Event">
            <hediff>Echolocation</hediff>
            <partsToAffect>
              <li>Head</li>
            </partsToAffect>
          </li>
        </hediffGivers>
        <applyImmediately>true</applyImmediately>
      </li>
    </modExtensions>
    <customEffectDescriptions>
      <li>Sight: use hearing if higher</li>
    </customEffectDescriptions>
  </GeneDef>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_Hediff</geneClass>
    <defName>Precognition</defName>
    <label>precognition</label>
    <description>Carriers of this gene can see a short distance into the future, giving bonuses to dodging and accuracy in combat. The effect scales with psychic sensitivity.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>400</displayOrderInCategory>
    <modExtensions>
      <li Class="XylRacesCore.GeneDefExtension_Hediff">
        <hediffGivers>
          <li Class="HediffGiver_Event">
            <hediff>Precognition</hediff>
            <partsToAffect>
              <li>Head</li>
            </partsToAffect>
          </li>
        </hediffGivers>
        <applyImmediately>true</applyImmediately>
      </li>
    </modExtensions>
    <customEffectDescriptions>
      <li>Melee hit chance: +2</li>
      <li>Melee dodge chance: +2</li>
      <li>Shooting accuracy: +2</li>
    </customEffectDescriptions>
  </GeneDef>

  <GeneDef>
    <defName>PsyFocus</defName>
    <label>focus</label>
    <description>Carriers automatically learn the Focus psycast, which boosts the target's sight, hearing and moving capacities.</description>
    <iconPath>UI/Abilities/Focus</iconPath>
    <geneClass>XylRacesCore.Gene_Psycast</geneClass>
    <displayCategory>Ability</displayCategory>
    <abilities>
      <li>Focus</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>Focus</AbilityDef>
    </descriptionHyperlinks>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
  </GeneDef>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_Flight</geneClass>
    <defName>BatWings</defName>
    <label>bat wings</label>
    <description>Carriers of this gene have bat-like wings, allowing them to fly for short periods.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
    <displayCategory>Movement</displayCategory>
    <displayOrderInCategory>400</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_BatWings</iconPath>
    <renderNodeProperties>
      <li>
        <nodeClass>XylRacesCore.PawnRenderNode_Wings</nodeClass>
        <workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
        <texPaths>
          <li>Things/Pawn/Humanlike/BodyAttachments/BatWings/BatWings</li>
          <li>Things/Pawn/Humanlike/BodyAttachments/BatWings/BatWingsExtended</li>
        </texPaths>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <color>(255, 255, 255)</color>
        <parentTagDef>Body</parentTagDef>
        <drawData>
          <defaultData>
            <layer>10</layer>
            <offset>(0,0,-0.1)</offset>
          </defaultData>
          <dataNorth>
            <layer>80</layer>
            <offset>(0,0,-0.1)</offset>
          </dataNorth>
        </drawData>
      </li>
    </renderNodeProperties>
    <capMods>
      <li>
        <capacity>Manipulation</capacity>
        <offset>-0.2</offset>
      </li>
    </capMods>
    <statOffsets>
      <MaxFlightTime>10</MaxFlightTime>
      <FlightCooldown>30</FlightCooldown>
    </statOffsets>
    <modExtensions>
      <li Class="XylRacesCore.GeneDefExtension_Flight">
        <iconPath>UI/Icons/Genes/Gene_BatWings</iconPath>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef>
    <defName>Nocturnal</defName>
    <label>nocturnal</label>
    <description>Carriers of this gene are naturally active at night.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>500</displayOrderInCategory>
    <forcedTraits>
      <li>
        <def>NightOwl</def>
      </li>
    </forcedTraits>
  </GeneDef>

  <GeneDef>
    <defName>KeenEars</defName>
    <label>keen ears</label>
    <description>Carriers of this gene have improved hearing.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>500</displayOrderInCategory>
    <capMods>
      <li>
        <capacity>Hearing</capacity>
        <offset>0.2</offset>
      </li>
    </capMods>
  </GeneDef>

  <GeneDef>
    <defName>SonicWave</defName>
    <label>sonic wave</label>
    <description>Carriers are able to release a wave of high-intensity ultrasonic noise in at a target. The noise will stun any non-mechanoid creature nearby.</description>
    <displayCategory>Ability</displayCategory>
    <abilities>
      <li>SonicWave</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>SonicWave</AbilityDef>
    </descriptionHyperlinks>
    <biostatMet>-2</biostatMet>
  </GeneDef>
  
</Defs>