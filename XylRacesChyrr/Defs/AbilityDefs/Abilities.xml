<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <AbilityDef>
    <defName>SonicWave</defName>
    <label>sonic wave</label>
    <description>Releases a wave of high-intensity ultrasonic noise in a targeted direction. The noise will stun any creature with hearing.</description>
    <cooldownTicksRange>300000</cooldownTicksRange>
    <aiCanUse>true</aiCanUse>
    <sendMessageOnCooldownComplete>true</sendMessageOnCooldownComplete>
    <casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
    <statBases>
      <Ability_Duration>5</Ability_Duration>
    </statBases>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>7.9</range>
      <warmupTime>0.25</warmupTime>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="XylRacesCore.CompProperties_AbilitySonicWave">
        <range>7.9</range>
        <lineWidthEnd>9</lineWidthEnd>
        <canHitFilledCells>true</canHitFilledCells>
        <durationMultiplierCapacity>Hearing</durationMultiplierCapacity>
      </li>
    </comps>
  </AbilityDef>

</Defs>