<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <defName>Giant</defName>
    <label>giant</label>
    <description>Carriers of this gene are exceptionally large. They can take more damage, carry more, and are more resistant to drugs and toxins, but are also easier to hit with ranged weapons.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
    <iconPath>UI/Icons/Genes/Gene_FacialStripes</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <displayCategory>Cosmetic</displayCategory>
    <displayOrderInCategory>501</displayOrderInCategory>
    <modExtensions>
      <li Class="XylRacesCore.ModExtension_GeneDef_Rendering">
        <scale>1.1</scale>
      </li>
      <li Class="XylRacesCore.ModExtension_GeneDef_Pawn">
        <bodySizeFactor>1.5</bodySizeFactor>
        <healthScaleFactor>1.25</healthScaleFactor>
      </li>
    </modExtensions>
    <customEffectDescriptions>
      <li>Body size: +50%</li>
      <li>Health: +25%</li>
    </customEffectDescriptions>
  </GeneDef>

  <GeneDef>
    <defName>MineralizedSkin</defName>
    <label>mineralized skin</label>
    <labelShortAdj>mineralized</labelShortAdj>
    <description>Carriers of this gene have tough, stone-like skin, which grants high protection against damage but slows their movement.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-3</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>400</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Scaleskin</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <renderNodeProperties>
      <li>
        <nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
        <workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
        <parentTagDef>Head</parentTagDef>
        <colorType>Skin</colorType>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <texPaths>
          <li>Things/Pawn/Humanlike/HeadAttachments/Osteoliths/Osteoliths</li>
        </texPaths>
        <visibleFacing>
          <li>East</li>
          <li>South</li>
          <li>West</li>
        </visibleFacing>
        <narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
        <baseLayer>51</baseLayer>
      </li>
    </renderNodeProperties>
    <randomBrightnessFactor>0.18</randomBrightnessFactor>
    <exclusionTags>
      <li>Fur</li>
    </exclusionTags>
    <statOffsets>
      <ArmorRating_Sharp>0.7</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <MoveSpeed>-0.4</MoveSpeed>
    </statOffsets>
    <missingGeneRomanceChanceFactor>0.2</missingGeneRomanceChanceFactor>
  </GeneDef>

  <GeneDef>
    <defName>Stoic</defName>
    <label>stoic</label>
    <labelShortAdj>stoic</labelShortAdj>
    <description>Carriers of this gene are mentally tough and won't break down under stresses that would crack most people.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
    <displayCategory>Mood</displayCategory>
    <displayOrderInCategory>200</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Stoic</iconPath>
    <iconColor>(0.5, 0.5, 0.5)</iconColor>
    <statOffsets>
      <MentalBreakThreshold>-0.09</MentalBreakThreshold>
    </statOffsets>
    <statFactors>
      <CertaintyLossFactor MayRequire="Ludeon.RimWorld.Ideology">0.5</CertaintyLossFactor>
    </statFactors>
    <symbolPack>
      <prefixSymbols>
        <li>
          <symbol>steel</symbol>
        </li>
        <li>
          <symbol>stone</symbol>
        </li>
        <li>
          <symbol>iron</symbol>
        </li>
        <li>
          <symbol>firm</symbol>
        </li>
      </prefixSymbols>
      <suffixSymbols>
        <li>
          <symbol>mind</symbol>
        </li>
        <li>
          <symbol>heart</symbol>
        </li>
        <li>
          <symbol>core</symbol>
        </li>
        <li>
          <symbol>will</symbol>
        </li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

</Defs>