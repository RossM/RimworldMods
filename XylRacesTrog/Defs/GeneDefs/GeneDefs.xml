<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_HostilityOverride</geneClass>
    <defName>InsectPheromones</defName>
    <label>insect pheromones</label>
    <description>Carriers of this gene produce special insect pheromones which make wild insects not attack them.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>500</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_FastReflexes</iconPath>
    <modExtensions>
      <li Class="XylRacesCore.ModExtension_GeneDef_HostilityOverride">
        <disableHostilityFromFaction>Insect</disableHostilityFromFaction>
        <violationDisableTicks>2500</violationDisableTicks>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef>
    <defName>ToxicBurst</defName>
    <label>toxic burst</label>
    <description>Carriers have the ability to release a cloud of toxic gas around them from a special organ in their body. The gas affects the user normally.</description>
    <iconPath>UI/Abilities/Beckon</iconPath>
    <displayCategory>Ability</displayCategory>
    <abilities>
      <li>ToxicBurst</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>ToxicBurst</AbilityDef>
    </descriptionHyperlinks>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
  </GeneDef>

</Defs>