<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_HostilityOverride</geneClass>
    <defName>InsectPheromones</defName>
    <label>insect pheromones</label>
    <description>Carriers of this gene produce special insect pheromones which make wild insects not attack them.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>500</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_FastReflexes</iconPath>
    <modExtensions>
      <li Class="XylRacesCore.ModExtension_GeneDef_HostilityOverride">
        <disableHostilityFromFaction>Insect</disableHostilityFromFaction>
        <violationDisableTicks>2500</violationDisableTicks>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef>
    <defName>ToxicBurst</defName>
    <label>toxic burst</label>
    <description>Carriers have the ability to release a cloud of toxic gas around them from a special organ in their body. The gas affects the user normally.</description>
    <iconPath>UI/Abilities/Beckon</iconPath>
    <displayCategory>Ability</displayCategory>
    <abilities>
      <li>ToxicBurst</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>ToxicBurst</AbilityDef>
    </descriptionHyperlinks>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneSkinColorOverride">
    <defName>Skin_DarkGreen</defName>
    <label>dark green skin</label>
    <labelShortAdj>dark green</labelShortAdj>
    <description>Carriers of this gene produce a pigment that gives their skin a dark green color.</description>
    <skinColorOverride>(81,132,32)</skinColorOverride>
    <displayOrderInCategory>0</displayOrderInCategory>
  </GeneDef>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_Hediff</geneClass>
    <defName>BioRejection</defName>
    <label>bio-rejection</label>
    <description>Carriers of this gene have a severe allergic reaction to any sort of artificial implant or body part. They will suffer continual pain until the implant or part is removed.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>2</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>500</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_RetractableClaws</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <suppressedTraits>
      <li>
        <def>Transhumanist</def>
      </li>
    </suppressedTraits>
    <modExtensions>
      <li Class="XylRacesCore.ModExtension_GeneDef_Hediff">
        <hediffGivers>
          <li Class="HediffGiver_Event">
            <hediff>BioRejection</hediff>
            <countToAffect>1</countToAffect>
          </li>
        </hediffGivers>
        <applyImmediately>true</applyImmediately>
      </li>
    </modExtensions>
  </GeneDef>


  <GeneDef>
    <geneClass>XylRacesCore.Gene_Atavism</geneClass>
    <defName>GeneticAtavism</defName>
    <label>genetic atavism</label>
    <description>Carriers of this gene have a chance of getting a random extra gene.</description>
    <biostatCpx>0</biostatCpx>
    <biostatMet>0</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>500</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_RetractableClaws</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
  </GeneDef>

</Defs>