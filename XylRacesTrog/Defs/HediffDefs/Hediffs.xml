<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <hediffClass>XylRacesCore.Hediff_BioRejection</hediffClass>
    <defName>BioRejection</defName>
    <label>bio-rejection</label>
    <description>Suffering from a severe allergic reaction to artificial body parts or implants. The only way to stop the reaction is to remove the artificial parts.</description>
    <initialSeverity>0.0</initialSeverity>
    <everCurableByItem>false</everCurableByItem>
    <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
    <isBad>true</isBad>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <minSeverity>1</minSeverity>
        <painOffset>0.2</painOffset>
      </li>
    </stages>
  </HediffDef>

</Defs>