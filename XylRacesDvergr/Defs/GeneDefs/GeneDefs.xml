<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <defName>XylIndustrious</defName>
    <label>industrious</label>
    <labelShortAdj>industrious</labelShortAdj>
    <description>Carriers of this gene are exceptionally fast workers.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-3</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>600</displayOrderInCategory>
    <iconPath>Xyl/UI/Icons/Genes/Gene_Industrious</iconPath>
    <iconColor>(0.35, 0.55, 0.35)</iconColor>
    <statOffsets>
      <WorkSpeedGlobal>0.15</WorkSpeedGlobal>
    </statOffsets>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>work</symbol></li>
        <li><symbol>task</symbol></li>
        <li><symbol>drive</symbol></li>
        <li><symbol>press</symbol></li>
        <li><symbol>forge</symbol></li>
        <li><symbol>labor</symbol></li>
        <li><symbol>hearth</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>grinder</symbol></li>
        <li><symbol>maker</symbol></li>
        <li><symbol>smith</symbol></li>
        <li><symbol>delver</symbol></li>
      </suffixSymbols>
    </symbolPack>    
  </GeneDef>

  <GeneDef>
    <defName>XylMelancholy</defName>
    <label>melancholy</label>
    <labelShortAdj>melancholy</labelShortAdj>
    <description>Carriers of this gene always have the tortured artist trait, which gives them a permanent mood penalty but also grants a chance to gain creative inspiration after a mental break.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>3</biostatMet>
    <displayCategory>Mood</displayCategory>
    <displayOrderInCategory>102</displayOrderInCategory>
    <iconPath>Xyl/UI/Icons/Genes/Gene_Melancholy</iconPath>
    <exclusionTags>
      <li>Mood</li>
    </exclusionTags>
    <forcedTraits>
      <li>
        <def>TorturedArtist</def>
      </li>
    </forcedTraits>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>gloom</symbol></li>
        <li><symbol>moan</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>spark</symbol></li>
        <li><symbol>wrought</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

  <GeneDef>
    <defName>XylStoic</defName>
    <label>stoic</label>
    <labelShortAdj>stoic</labelShortAdj>
    <description>Carriers of this gene are mentally tough and won't break down under stresses that would crack most people.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
    <displayCategory>Mood</displayCategory>
    <displayOrderInCategory>100</displayOrderInCategory>
    <iconPath>Xyl/UI/Icons/Genes/Gene_Stoic</iconPath>
    <iconColor>(0.5, 0.5, 0.5)</iconColor>
    <statOffsets>
      <MentalBreakThreshold>-0.09</MentalBreakThreshold>
    </statOffsets>
    <statFactors>
      <CertaintyLossFactor MayRequire="Ludeon.RimWorld.Ideology">0.5</CertaintyLossFactor>
    </statFactors>
    <suppressedTraits>
      <li>
        <def>Nerves</def>
        <degree>2</degree>
      </li>
      <li>
        <def>Nerves</def>
        <degree>1</degree>
      </li>
      <li>
        <def>Nerves</def>
        <degree>-1</degree>
      </li>
      <li>
        <def>Nerves</def>
        <degree>-2</degree>
      </li>
    </suppressedTraits>
    <exclusionTags>
      <li>MelancholyAndEvenTemper</li>
    </exclusionTags>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>steel</symbol></li>
        <li><symbol>stone</symbol></li>
        <li><symbol>iron</symbol></li>
        <li><symbol>firm</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>mind</symbol></li>
        <li><symbol>heart</symbol></li>
        <li><symbol>core</symbol></li>
        <li><symbol>will</symbol></li>
      </suffixSymbols>
    </symbolPack>    
  </GeneDef>

  <GeneDef>
    <defName>XylFungusEater</defName>
    <label>fungus eater</label>
    <labelShortAdj>fungus-eating</labelShortAdj>
    <description>Carriers of this gene have special digestive enzymes that extract more nutrition from raw fungus - but they don't do anything about the taste.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>13</displayOrderInCategory>
    <iconPath>Xyl/UI/Icons/Genes/Gene_MushroomEater</iconPath>
    <exclusionTags>
      <li>Digestion</li>
    </exclusionTags>
    <statFactors>
      <XylRawFungusNutritionFactor>1.8</XylRawFungusNutritionFactor>
    </statFactors>
    <customEffectDescriptions>
      <li>Enables building: Fungus still</li>
    </customEffectDescriptions>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>fungi</symbol></li>
        <li><symbol>shroom</symbol></li>
        <li><symbol>myco</symbol></li>
        <li><symbol>spore</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>gut</symbol></li>
        <li><symbol>eater</symbol></li>
        <li><symbol>muncher</symbol></li>
        <li><symbol>bloom</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

  <GeneDef ParentName="GeneEarsBase">
    <defName>XylEars_SmallPointed</defName>
    <label>small pointed ears</label>
    <description>Carriers of this gene have smaller pointed ears.</description>
    <iconPath>Xyl/UI/Icons/Genes/Gene_EarSmallPointed</iconPath>
    <displayOrderInCategory>71</displayOrderInCategory>
    <renderNodeProperties>
      <li>
        <nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
        <workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
        <texPath>Xyl/Things/Pawn/Humanlike/HeadAttachments/SmallPointedEars/SmallPointedEars</texPath>
        <colorType>Skin</colorType>
        <parentTagDef>Head</parentTagDef>
        <useSkinShader>true</useSkinShader>
        <useRottenColor>true</useRottenColor>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <drawData>
          <defaultData>
            <layer>61</layer>
          </defaultData>
        </drawData>
      </li>
    </renderNodeProperties>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>fox</symbol></li>
        <li><symbol>fey</symbol></li>
        <li><symbol>point</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>ear</symbol></li>
        <li><symbol>tips</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

</Defs>