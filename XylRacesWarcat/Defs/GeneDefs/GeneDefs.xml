<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <defName>FastReflexes</defName>
    <label>fast reflexes</label>
    <labelShortAdj>fast</labelShortAdj>
    <description>Carriers of this gene have excellent reflexes that allow them to dodge melee attacks and evade traps.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
    <displayCategory>ResistanceAndWeakness</displayCategory>
    <displayOrderInCategory>100</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Moody</iconPath>
    <forcedTraits>
      <li>
        <def>Nimble</def>
      </li>
    </forcedTraits>
  </GeneDef>

  <GeneDef>
    <defName>MeatDependence</defName>
    <label>meat dependence</label>
    <labelShortAdj>meat-dependent</labelShortAdj>
    <description>TODO.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>3</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>100</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Moody</iconPath>
    <forcedTraits>
      <li>
        <def>Carnivore</def>
      </li>
    </forcedTraits>
  </GeneDef>

  <GeneDef>
    <defName>CarnivoreStomach</defName>
    <label>carnivore stomach</label>
    <labelShortAdj>carnivorous</labelShortAdj>
    <description>Carriers of this gene have specialized stomachs that can extract more nutrition from raw meat, but are poor at digesting plant-based foods. They never get negative thoughts from eating meat.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>100</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Moody</iconPath>
    <exclusionTags>
      <li>Digestion</li>
      <li>Diet</li>
    </exclusionTags>
    <statFactors>
      <RawMeatNutritionFactor>1.8</RawMeatNutritionFactor>
      <RawNonMeatNutritionFactor>0.5</RawNonMeatNutritionFactor>
      <CookedNonMeatNutritionFactor>0.8</CookedNonMeatNutritionFactor>
    </statFactors>
    <forcedTraits>
      <li>
        <def>Carnivore</def>
      </li>
    </forcedTraits>
  </GeneDef>

  <GeneDef>
    <defName>HerbivoreStomach</defName>
    <label>herbivore stomach</label>
    <labelShortAdj>herbivorous</labelShortAdj>
    <description>Carriers of this gene have specialized stomachs that can extract more nutrition from raw plant-based foods, but are poor at digesting meat. They never get negative thoughts from eating plant-based foods.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>100</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Moody</iconPath>
    <exclusionTags>
      <li>Digestion</li>
      <li>Diet</li>
    </exclusionTags>
    <statFactors>
      <RawNonMeatNutritionFactor>1.8</RawNonMeatNutritionFactor>
      <RawMeatNutritionFactor>0.5</RawMeatNutritionFactor>
      <CookedMeatNutritionFactor>0.8</CookedMeatNutritionFactor>
    </statFactors>
    <forcedTraits>
      <li>
        <def>Herbivore</def>
      </li>
    </forcedTraits>
  </GeneDef>

  <GeneDef ParentName="GeneEyeColor">
    <defName>Eyes_Yellow</defName>
    <label>yellow eyes</label>
    <labelShortAdj>yellow-eyed</labelShortAdj>
    <description>Carriers of this gene have yellow-pigmented eyes.</description>
    <iconPath>UI/Icons/Genes/Gene_YellowEyes</iconPath>
    <displayOrderInCategory>2</displayOrderInCategory>
    <renderNodeProperties>
      <li Class="PawnRenderNodeProperties_Eye">
        <texPath>Things/Pawn/Humanlike/HeadAttachments/YellowEyes/Male/YellowEyes_Male</texPath>
        <texPathFemale>Things/Pawn/Humanlike/HeadAttachments/YellowEyes/Female/YellowEyes_Female</texPathFemale>
        <anchorTag>RightEye</anchorTag>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <parentTagDef>Head</parentTagDef>
        <drawSize>0.2</drawSize>
        <side>Right</side>
        <drawData>
          <defaultData>
            <layer>54</layer>
            <offset>(0, 0, -0.25)</offset>
          </defaultData>
        </drawData>
      </li>
      <li Class="PawnRenderNodeProperties_Eye">
        <texPath>Things/Pawn/Humanlike/HeadAttachments/YellowEyes/Male/YellowEyes_Male</texPath>
        <texPathFemale>Things/Pawn/Humanlike/HeadAttachments/YellowEyes/Female/YellowEyes_Female</texPathFemale>
        <anchorTag>LeftEye</anchorTag>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <parentTagDef>Head</parentTagDef>
        <drawSize>0.2</drawSize>
        <side>Left</side>
        <drawData>
          <defaultData>
            <layer>54</layer>
            <offset>(0, 0, -0.25)</offset>
            <flip>true</flip>
          </defaultData>
          <dataWest>
            <flip>false</flip>
          </dataWest>
        </drawData>
      </li>
    </renderNodeProperties>
  </GeneDef>

  <GeneDef>
    <defName>FacialStripes</defName>
    <label>facial stripes</label>
    <description>Carriers of this gene have striped skin on their face.</description>
    <iconPath>UI/Icons/Genes/Gene_YellowEyes</iconPath>
    <displayCategory>Cosmetic</displayCategory>
    <displayOrderInCategory>501</displayOrderInCategory>
    <biostatCpx>0</biostatCpx>
    <renderNodeProperties>
      <li>
        <nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
        <workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
        <parentTagDef>Head</parentTagDef>
        <colorType>Skin</colorType>
        <useRottenColor>true</useRottenColor>
        <useSkinShader>true</useSkinShader>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <texPaths>
          <li>Things/Pawn/Humanlike/HeadAttachments/FacialStripes/FacialStripesA</li>
        </texPaths>
        <visibleFacing>
          <li>East</li>
          <li>South</li>
          <li>West</li>
        </visibleFacing>
        <narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
        <baseLayer>51</baseLayer>
      </li>
    </renderNodeProperties>
    <randomBrightnessFactor>0.18</randomBrightnessFactor>
    <exclusionTags>
      <li>Face</li>
      <li>Brow</li>
    </exclusionTags>
  </GeneDef>

  <GeneDef>
    <geneClass>XylRacesCore.Gene_Hediff</geneClass>
    <defName>RetractableClaws</defName>
    <label>retractable claws</label>
    <labelShortAdj>claws</labelShortAdj>
    <description>Carriers of this gene have retractable claws that function as a weapon.</description>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
    <displayCategory>Violence</displayCategory>
    <displayOrderInCategory>100</displayOrderInCategory>
    <iconPath>UI/Icons/Genes/Gene_Moody</iconPath>
    <modExtensions>
      <li Class="XylRacesCore.ModExtension_GeneDef">
        <hediffGivers>
          <li Class="HediffGiver_Refresh">
            <hediff>RetractableClaws</hediff>
            <partsToAffect>
              <li>Hand</li>
            </partsToAffect>
            <countToAffect>2</countToAffect>
          </li>
        </hediffGivers>
      </li>
    </modExtensions>
  </GeneDef>

</Defs>