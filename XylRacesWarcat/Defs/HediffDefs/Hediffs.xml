<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <hediffClass>XylRacesCore.Hediff_Weapon</hediffClass>
    <defName>RetractableClaws</defName>
    <label>retractable claws</label>
    <description>Retractable claws. They can perform rapid slashing attacks, but are poor at penetrating armor.</description>
    <initialSeverity>1.0</initialSeverity>
    <addedPartProps>
      <solid>true</solid>
    </addedPartProps>
    <countsAsAddedPartOrImplant>true</countsAsAddedPartOrImplant>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>claw</label>
            <capacities>
              <li>Scratch</li>
            </capacities>
            <power>15</power>
            <armorPenetration>0.0</armorPenetration>
            <cooldownTime>1.2</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
            <soundMeleeHit>MeleeHit_BionicSlash</soundMeleeHit>
            <soundMeleeMiss>MeleeMiss_BionicSlash</soundMeleeMiss>
          </li>
        </tools>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>FeralRage</defName>
    <label>feral rage</label>
    <description>A temporary frenzy state. It increases movement and melee attack speed, and decreases pain.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_ReplaceHediff">
        <compClass>XylRacesCore.HediffComp_ReplaceOnRemoval</compClass>
        <manuallyTriggered>true</manuallyTriggered>
        <hediffs>
          <li>
            <hediff>FeralRageBacklash</hediff>
          </li>
        </hediffs>
      </li>
      <li Class="HediffCompProperties_Disappears">
        <!--1 hour-->
        <disappearsAfterTicks>2500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.5</offset>
          </li>
        </capMods>
        <painFactor>0.5</painFactor>
        <statFactors>
          <MeleeCooldownFactor>0.75</MeleeCooldownFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>FeralRageBacklash</defName>
    <label>feral rage (backlash)</label>
    <description>Recovering from a frenzy state. Causes pain and decreases movement speed.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <isBad>true</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
         <!--12 hours--> 
        <disappearsAfterTicks>30000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
        <painOffset>0.1</painOffset>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>Moody</defName>
    <label>moody</label>
    <description>This character is genetically predisposed to severely fluctuating moods.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <!-- 8~16 hours -->
        <disappearsAfterTicks>20000~40000</disappearsAfterTicks>
        <showRemainingTime>false</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_GiveRandomSituationalThought">
        <thoughtDefs>
          <li>Moody_Up</li>
          <li>Moody_Down</li>
        </thoughtDefs>
      </li>
    </comps>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>

</Defs>