<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="TribeBase">
    <defName>XylTribeGentleNixie</defName>
    <label>gentle nixie tribe</label>
    <description>A peaceful tribe of beautiful aquatic nixies. This particular tribe is open to contact and trade with the dryskins. They prefer to make their homes near rivers and coastlines, but small bands sometimes travel far inlands.\n\nOriginally engineered for the world Atlantis, nixies are now found on many planets. This one has had them for thousands of years.</description>
    <xenotypeSet Inherit="False">
      <xenotypeChances>
        <XylNixie>999</XylNixie>
      </xenotypeChances>
    </xenotypeSet>
    <colorSpectrum>
      <li>(0.4, 0.65, 0.75)</li>
    </colorSpectrum>
    <replacesFaction>TribeCivil</replacesFaction>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
    </requiredMemes>
    <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">PainIsVirtue</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
    </disallowedMemes>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>30</configurationListOrderPriority>
    <modExtensions>
      <li Class="XylRacesCore.FactionDefExtension">
        <waterRequired>true</waterRequired>
      </li>
    </modExtensions>
  </FactionDef>

  <FactionDef ParentName="PlayerFactionBase">
    <defName>XylSirenPlayerColony</defName>
    <label>New Arrivals</label>
    <description>A colony of recently-arrived off-worlders.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>XylNixie_Siren</basicMemberKind>
    <pawnSingular>colonist</pawnSingular>
    <pawnsPlural>colonists</pawnsPlural>
    <techLevel>Industrial</techLevel>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <allowedCultures>
      <li>Astropolitan</li>
    </allowedCultures>
    <backstoryFilters>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
      </li>
    </backstoryFilters>
    <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    <startingResearchTags>
      <li>ClassicStart</li>
    </startingResearchTags>
    <startingTechprintsResearchTags>
      <li>ClassicStart</li>
      <li>ClassicStartTechprints</li>
    </startingTechprintsResearchTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Hyperweave</li>
      </thingDefs>
    </apparelStuffFilter>
  </FactionDef>

</Defs>