<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ScenarioDef ParentName="ScenarioBase" MayRequire="Ludeon.RimWorld.Royalty">
    <defName>XylTheSiren</defName>
    <label>The Siren</label>
    <description>TODO.</description>
    <scenario>
      <summary>One nixie with powerful non-combat psychic abilities.</summary>
      <parts>

        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnChoiceCount>8</pawnChoiceCount>
          <pawnCount>1</pawnCount>
        </li>
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>DropPods</method>
        </li>
        <li Class="XylRacesCore.ScenPart_ForcedXenotype">
          <def>XylForcedXenotype</def>
          <chance>1</chance>
          <context>PlayerStarter</context>
          <xenotype>XylNixie</xenotype>
        </li>

        <!-- Starting techs -->
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>GunTurrets</project>
        </li>

        <!-- Starting psychics -->
        <li Class="XylRacesCore.ScenPart_PsylinkLevels">
          <def>XylPsylinkLevels</def>
          <count>3</count>
          <givePsycasts>false</givePsycasts>
        </li>
        <li Class="XylRacesCore.ScenPart_Psycast">
          <def>XylPsycasts</def>
          <count>1</count>
          <psycast>WordOfTrust</psycast>
        </li>
        <li Class="XylRacesCore.ScenPart_Psycast">
          <def>XylPsycasts</def>
          <count>1</count>
          <psycast>WordOfJoy</psycast>
        </li>
        <li Class="XylRacesCore.ScenPart_Psycast">
          <def>XylPsycasts</def>
          <count>1</count>
          <psycast>WordOfLove</psycast>
        </li>
        <li Class="XylRacesCore.ScenPart_Psycast">
          <def>XylPsycasts</def>
          <count>1</count>
          <psycast>Waterskip</psycast>
        </li>

        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>2000</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gold</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>40</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineUltratech</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ComponentIndustrial</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gun_ChargeRifle</thingDef>
        </li>
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <count>1</count>
          <bondToRandomPlayerPawnChance>1</bondToRandomPlayerPawnChance>
        </li>

        <!-- Scatter some things near player start -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>Steel</thingDef>
          <count>450</count>
          <allowRoofed>True</allowRoofed>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>300</count>
          <allowRoofed>True</allowRoofed>
        </li>

        <!-- Game start dialog -->
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>TODO.</text>
          <closeSound>GameStartSting</closeSound>
        </li>

      </parts>
    </scenario>
  </ScenarioDef>

</Defs>